{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Semantic Kernel Process YAML Schema",
  "type": "object",
  "properties": {
    "workflow": {
      "type": "object",
      "required": ["id", "nodes"],
      "properties": {
        "id": { "type": "string" },
        "inputs": {
          "type": "object",
          "properties": {
            "events": {
              "type": "object",
              "properties": {
                "cloud_events": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "type": { "type": "string" },
                      "data_schema": {
                        "type": ["object", "string", "null"]
                      }
                    },
                    "required": ["type"]
                  }
                }
              }
            }
          }
        },
        "nodes": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["id", "type", "agent"],
            "properties": {
              "id": { "type": "string" },
              "type": { "type": "string", "enum": ["dotnet", "declarative"] },
              "description": { "type": "string" },
              "agent": {
                "oneOf": [
                  {
                    "type": "object",
                    "properties": {
                      "type": { "type": "string" }
                    },
                    "required": ["type"]
                  },
                  {
                    "type": "string"
                  }
                ]
              },
              "on_complete": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "on_condition": {
                      "type": "object",
                      "properties": {
                        "type": { "type": "string" },
                        "emits": {
                          "type": "array",
                          "items": {
                            "type": "object",
                            "properties": {
                              "event_type": { "type": "string" }
                            },
                            "required": ["event_type"]
                          }
                        }
                      },
                      "required": ["type", "emits"]
                    }
                  },
                  "required": ["on_condition"]
                }
              }
            }
          }
        },
        "orchestration": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "listen_for": {
                "type": "object",
                "properties": {
                  "event": { "type": "string" },
                  "from": { "type": "string" }
                },
                "required": ["event"]
              },
              "then": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "node": { "type": "string" }
                  },
                  "required": ["node"]
                }
              }
            },
            "required": ["listen_for", "then"]
          }
        }
      }
    }
  },
  "required": ["workflow"]
}
